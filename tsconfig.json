{
    "compilerOptions": {
        "lib": ["es2017", "dom"],
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist/cjs",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
